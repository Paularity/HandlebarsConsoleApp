<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Handlebars.Net" Version="2.1.4" />
    <PackageReference Include="Handlebars.Net.Helpers" Version="2.4.1.5" />
    <PackageReference Include="Handlebars.Net.Helpers.DynamicLinq" Version="2.4.1.5" />
    <PackageReference Include="Handlebars.Net.Helpers.Humanizer" Version="2.4.1.5" />
    <PackageReference Include="Handlebars.Net.Helpers.Json" Version="2.4.1.5" />
    <PackageReference Include="PuppeteerSharp" Version="15.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="data.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="ORAData.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
